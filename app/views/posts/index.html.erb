<% @posts.each do |post| %>
    <div class="post_wrapper">
      <h2 class="title"><%= link_to post.title, post %></h2>
      <p>
        Tags: <%= raw post.tags.map(&:name).map { |t| link_to t, tag_path(t)}.join(', ') %>
      </p>
      <p class="date">
        <%= post.created_at.strftime("%B, %d, %Y") %>
      </p>
    </div>

<% end %>